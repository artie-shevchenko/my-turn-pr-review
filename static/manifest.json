{
  "name": "Your Turn - PR Review",
  "description": "GitHub Pull Requests that need your attention.",
  "version": "0.1.4",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "permissions": ["storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Your Turn - PR review",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/red16.png",
      "48": "/icons/red48.png",
      "128": "/icons/red128.png"
    }
  },
  "icons": {
    "16": "/icons/red16.png",
    "48": "/icons/red48.png",
    "128": "/icons/red128.png"
  }
}