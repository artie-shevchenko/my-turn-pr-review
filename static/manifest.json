{
  "name": "My Turn - GitHub PR Review",
  "description": "Never miss a Pull Request that needs your attention, with minimal distractions. Inspired by internal Google tool - \"Your Turn\".",
  "version": "0.1.13",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "permissions": ["alarms","storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "My Turn - PR review",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/red16.png",
      "48": "/icons/red48.png",
      "128": "/icons/red128.png"
    }
  },
  "icons": {
    "16": "/icons/red16.png",
    "48": "/icons/red48.png",
    "128": "/icons/red128.png"
  }
}